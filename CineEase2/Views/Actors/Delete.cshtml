        cursor: pointer;
        text-decoration: none;
        display: inline-block;
    }
</style>
<div>
    <h4>Actors</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActorName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActorName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActorSurname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActorSurname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActorAge)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActorAge)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nationality)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nationality)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Follower)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Follower)
        </dd>
